#include <curses.h>
#include <iostream>

using namespace std;


int 	r, c,
	trows, tcols,	// total
	erows, ecols;	// editor
	

void draw(char dc)
{
	delch();
	insch(dc);
	refresh();
	c++;
	if (c == tcols)
	{
		c = 0;
		r++;
		if (r == trows) r = 0;
	}
	move(r, c);
}

int main()
{
	int i;
	char d;
	WINDOW *wnd;
	wnd = initscr();
	cbreak();
	noecho();
	getmaxyx(wnd, trows, tcols);			// macro, not necessary to pass reference
	clear();
	refresh();

	r = 0; c = 0;
	move(r, c);
	while (1)
	{
		d = getch();
		if (d == 'q') break;
		draw(d);
	}

	endwin();
}
